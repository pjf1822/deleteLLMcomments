{
    "manifest_version": 3,
    "name": "ChatGPT Comment Eraser:",
    "description": "This extension removes comments from ChatGPT-generated code.",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "clipboardRead",
      "clipboardWrite"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
      }
    },
    
    "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

    "content_scripts": [
      {
        "matches": ["*://chatgpt.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  